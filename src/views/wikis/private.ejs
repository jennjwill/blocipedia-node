<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <h1>Private Wikis</h1>

      <div>
        <ul class="list-group">

           </a>
           <% wikis.forEach((wiki) => { %>
            <% if(currentUser && (currentUser.id == wiki.userId || currentUser
            && currentUser.role === "admin")) { %>


              
                <li class="list-group-item">
                  <a href="/wikis/<%= wiki.id %>"><%= wiki.title %></a>
                  <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning"
                  >Edit</a>
                
                  <a href="/wikis/<%= wiki.id %>/collaborators" class="btn btn-info"
                  >Collaborators</a>
            

            <form
              style="display:initial"
              action="/wikis/<%= wiki.id %>/destroy"
              method="post"
            >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <% } %>
          </li>
          <% }); %>
        </ul>
      </div>
      <div>
        <% if(currentUser) { %>
        <a href="/wikis/new" class="btn btn-success">Create New Wiki</a>
        <% } %>
      </div>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
